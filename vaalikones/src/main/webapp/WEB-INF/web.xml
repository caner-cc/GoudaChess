<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Vaalikone</servlet-name>
		<servlet-class>vaalikone.Vaalikone</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Vaalikone</servlet-name>
		<url-pattern>/Vaalikone</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>vaalikone.Login</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ViewC</servlet-name>
		<servlet-class>testpack.ViewC</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ViewC</servlet-name>
		<url-pattern>/ViewC</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DeleteC</servlet-name>
		<servlet-class>testpack.DeleteC</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeleteC</servlet-name>
		<url-pattern>/DeleteC</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>EditC</servlet-name>
		<servlet-class>testpack.EditC</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EditC</servlet-name>
		<url-pattern>/EditC</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>EditC2</servlet-name>
		<servlet-class>testpack.EditC2</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EditC2</servlet-name>
		<url-pattern>/EditC2</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>SaveC</servlet-name>
		<servlet-class>testpack.SaveC</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SaveC</servlet-name>
		<url-pattern>/SaveC</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>jersey-servlet</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<!-- init-param tells in which package(s) REST services are (comma separated 
			list if necessary) -->
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>rest, persist, dao</param-value>
		</init-param>
		<!-- This tells the server to load REST service when the server starts -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- servlet-mapping gives the first part of the path (url-pattern) where 
		the REST service is found (e.g. http://my.server.fi/rest) and the rest of 
		the path is given in the REST class and in its methods -->
	<servlet-mapping>
		<servlet-name>jersey-servlet</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>


	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

</web-app>